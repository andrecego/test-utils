{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "off",
        "@typescript-eslint/type-annotation-spacing": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "indent": [
            "error",
            2
        ],
        "no-throw-literal": "warn",
        "semi": [
            "error",
            "never"
        ]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}
